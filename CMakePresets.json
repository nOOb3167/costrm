{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 0,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "configure-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "Boost_DIR": "$env{USERPROFILE}/test/boost/boost_1_76_0/lib64-msvc-14.2/cmake/Boost-1.76.0",
        "COSTRM_PYVERS": "$env{COSTRM_PYVERS}",
        "COSTRM_PYPATH": "$env{APPDATA}/../Local/Programs/Python/Python$env{COSTRM_PYVERS}"
      },
      "environment": {
        "COSTRM_PYVERS": "39"
      }
    },
    {
      "name": "x86-windows",
      "inherits": [ "configure-base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-base",
      "configurePreset": "configure-base"
    }
  ]
}
